    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deploy and Debug on PI",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "${config:target}",
              "port": 5678
            },
            "preLaunchTask": "remote-debug-launcher",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Attach Debug on PI",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "${config:target}",
              "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}