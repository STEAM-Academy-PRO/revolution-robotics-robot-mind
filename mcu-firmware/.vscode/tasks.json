{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate version",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m tools.gen_version",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m tools.gen_version"
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m tools.generate_makefile --cleanup",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m tools.generate_makefile --cleanup"
            },
            "problemMatcher": []
        },
        {
            "label": "generate runtime",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m cglue.cli --generate --cglue-output=rrrc/generated_runtime --cleanup",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m cglue.cli --generate --cglue-output=rrrc/generated_runtime --cleanup"
            },
            "problemMatcher": []
        },
        {
            "label": "generate documentation",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m tools.generate_component_diagram --ignore-components=Runtime --output=docs/map --display",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m tools.generate_component_diagram --ignore-components=Runtime --output=docs/map --display"
            },
            "problemMatcher": []
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean",
            "dependsOn": [
                "generate makefile"
            ]
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "make all config=debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "generate version",
                "generate makefile",
                "generate runtime"
            ]
        },
        {
            "label": "make release",
            "type": "shell",
            "command": "make all config=release",
            "problemMatcher": [],
            "dependsOn": [
                "generate version",
                "generate makefile",
                "generate runtime"
            ]
        },
        {
            "label": "prepare release binary",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m tools.prepare",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m tools.prepare"
            },
            "problemMatcher": [],
            "dependsOn": [
                "make release"
            ]
        },
        {
            "label": "prepare debug binary",
            "type": "shell",
            "command": "${config:python.pythonPath.linux} -m tools.prepare --debug",
            "windows": {
                "command": "${config:python.pythonPath.windows} -m tools.prepare --debug"
            },
            "problemMatcher": [],
            "dependsOn": [
                "make debug"
            ]
        }
    ]
}